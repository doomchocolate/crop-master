<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              tools:background="@color/preview_image_mask_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/crop_activity_preview_grid_gap_width"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/index_1_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/crop_activity_preview_grid_gap_width"
            android:layout_weight="1"
            android:background="@color/preview_grid_color"
            android:scaleType="centerInside"
            tools:src="@drawable/crop_activity_preview_grid_1"/>

        <ImageView
            android:id="@+id/index_1_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/crop_activity_preview_grid_gap_width"
            android:layout_weight="1"
            android:background="@color/preview_grid_color"
            android:scaleType="centerInside"
            tools:src="@drawable/crop_activity_preview_grid_2" />

        <ImageView
            android:id="@+id/index_1_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/preview_grid_color"
            android:scaleType="centerInside"
            tools:src="@drawable/crop_activity_preview_grid_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/index_2_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/crop_activity_preview_grid_gap_width"
            android:layout_weight="1"
            android:background="@color/preview_grid_color"
            android:scaleType="centerInside"
            tools:src="@drawable/crop_activity_preview_grid_4"/>

        <ImageView
            android:id="@+id/index_2_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/crop_activity_preview_grid_gap_width"
            android:layout_weight="1"
            android:background="@color/preview_grid_color"
            android:scaleType="centerInside"
            tools:src="@drawable/crop_activity_preview_grid_5" />

        <ImageView
            android:id="@+id/index_2_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/preview_grid_color"
            android:scaleType="centerInside"
            tools:src="@drawable/crop_activity_preview_grid_6" />
    </LinearLayout>

</LinearLayout>